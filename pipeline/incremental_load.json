						{
							"type": "Query",
							"text": {
								"value": "SELECT count(*) as total_count \nFROM @{pipeline().parameters.schema}.@{pipeline().parameters.table}\nWHERE last_updated > '@{activity('last cdc').output.firstRow.cdc_timestamp}'",
