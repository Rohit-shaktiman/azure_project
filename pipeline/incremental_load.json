									"type": "DatasetReference"
								}
							],
							"outputs": [
								{
									"referenceName": "empty_Json",
									"type": "DatasetReference"
								}
							]
						},
						{
							"name": "max_value",
							"type": "Script",
							"dependsOn": [
								{
									"activity": "load_data",
									"dependencyConditions": [
